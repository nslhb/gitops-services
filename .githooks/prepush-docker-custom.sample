#!/bin/sh
echo "$0 IS RUNNING"
#if [ $(which docker) ] && [ $(docker --version) ]; then
if [ $(which docker) ]; then
  if [ -z "$($1 docker images -q zricethezav/gitleaks:latest)" ]; then	
    $1 docker pull zricethezav/gitleaks
  fi
  $1 docker run -v `git rev-parse --show-toplevel`:/nsl-repo zricethezav/gitleaks:latest --path="/nsl-repo" -v
else
  echo "Error: Please Install Docker For NSL Sensitive Info Check"
  exit 1
fi
